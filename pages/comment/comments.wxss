/* pages/comment/comments.wxss */
.community-container {
  background: #1a1a1a;
  min-height: 100vh;
  color: #fff;
}

/* 发布操作按钮 */
.publish-actions {
  position: fixed;
  top: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  z-index: 100;
}

.action-button {
  background: #262626;
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 发布栏 */
.publish-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #262626;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.3);
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.publish-bar input {
  flex: 1;
  background: #333;
  padding: 12rpx 16rpx;
  border-radius: 24rpx;
  color: #fff;
}

/* 评论卡片 */
.comment-card {
  background: #262626;
  margin: 24rpx 16rpx;
  border-radius: 16rpx;
  padding: 16rpx;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #333;
}

.user-info {
  flex: 1;
}

.nickname {
  font-weight: 500;
  font-size: 32rpx;
}

.time {
  color: #999;
  font-size: 28rpx;
}

/* 多媒体 */
.media-gallery {
  display: flex;
  gap: 8rpx;
  margin: 16rpx 0;
}

.media-item {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 互动区 */
.card-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  font-size: 28rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #333;
}

.reply-btn,
.like-btn {
  display: flex;
  gap: 4rpx;
  align-items: center;
  cursor: pointer;
}

/* 回复列表 */
.reply-list {
  margin-left: 40rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid #333;
}

.reply-item {
  margin: 8rpx 0;
  font-size: 28rpx;
  color: #ccc;
}

.reply-nick {
  color: #409eff;
  font-weight: 500;
}

/* 评分弹窗 */
.score-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.score-popup-content {
  background: #262626;
  padding: 20rpx;
  border-radius: 16rpx;
  text-align: center;
}

.score-stars {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.score-stars icon {
  color: #ffd700;
}

/* 点赞图标 */
.like-icon {
  width: 20rpx;
  height: 20rpx;
}