/* map.wxss */
.geofencd-alert { /* 修正类名拼写 */
    position: fixed;
    top: 20rpx;
    left: 5%;
    right: 5%;
    background: #fff0f0;
    border: 1rpx solid #ff4444;
    padding: 16rpx;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    z-index: 999;
}
  
.search-bar {
    position: fixed;
    top: 100rpx;
    left: 5%;
    right: 5%;
    background: white;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.search-container {
    position: relative;
    margin: 20rpx;
    background: rgba(255,255,255,0.9);
    border-radius: 44rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
  
.search-icon {
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 40rpx;
    height: 40rpx;
}

.search-results {
    max-height: 60vh;
    background: white;
    margin: 0 20rpx;
    border-radius: 12rpx;
}

.result-item {
    padding: 24rpx;
    border-bottom: 1rpx solid #eee;
}

.search-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    color: #ff4444;
}
