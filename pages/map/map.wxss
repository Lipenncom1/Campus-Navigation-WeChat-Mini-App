/* map.wxss */
.geofencd-alert { /* 修正类名拼写 */
  position: fixed;
  top: 20rpx;
  left: 5%;
  right: 5%;
  background: #fff0f0;
  border: 1rpx solid #ff4444;
  padding: 16rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  z-index: 999;
}

.search-bar {
  position: fixed;
  top: 100rpx;
  left: 5%;
  right: 5%;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.search-container {
  position: relative;
  margin: 20rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.search-results {
  max-height: 60vh;
  background: white;
  margin: 0 20rpx;
  border-radius: 12rpx;
}

.result-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.search-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  color: #ff4444;
}

.route-container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.nav-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 1000;
}

.nav-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #007AFF;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  text-align: center;
}

.search-history {
  margin: 0 20rpx;
  background: white;
  border-radius: 12rpx;
}

.history-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.history-btn {
    margin: 10rpx 20rpx;
    padding: 16rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    text-align: center;
    color: #007AFF;
}