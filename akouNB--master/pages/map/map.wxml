<map
    id="campusMap"
    polygons="{{polygons}}"
    bindloaded="handleMapLoaded"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="15"
    show-location
    markers="{{markers}}"
    style="width: 100%; height: 100vh;"
    bindregionchange="onRegionChange">

    <!-- 优化后的搜索栏 -->
  <view class="search-container">
    <!-- 新增聚焦事件 -->
    <input 
      placeholder="搜索教学楼/食堂/图书馆"
      placeholder-class="placeholder-style"
      bindinput="handleSearchInput"
      bindconfirm="handleSearchSubmit"
      bindfocus="onSearchInputFocus"
    />
    <image src="/icons/search.png" class="search-icon" />
  </view>

  <!-- 搜索结果列表 -->
  <scroll-view wx:if="{{searchResults.length}}" class="search-results" scroll-y>
    <view wx:for="{{searchResults}}" wx:key="id" class="result-item">
        <view class="result-info" 
              bindtap="startNavigation" 
              data-latitude="{{item.latitude}}" 
              data-longitude="{{item.longitude}}"
              data-title="{{item.title}}"
              data-address="{{item.address}}">
            <text class="title">{{item.title}}</text>
            <text class="address">{{item.address}}</text>
        </view>
    </view>
  </scroll-view>

  <!-- 搜索历史列表 -->
  <scroll-view wx:if="{{showSearchHistory && filteredSearchHistory.length}}" class="search-history" scroll-y>
    <view wx:for="{{filteredSearchHistory}}" wx:key="*this" class="history-item" bindtap="onSearchHistoryClick" data-keyword="{{item}}">
      <text>{{item}}</text>
    </view>
  </scroll-view>
</map>